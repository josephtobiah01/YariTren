    <Style x:Key="BaseLabel" TargetType="Label">
        <Setter Property="TextColor" 
            Value="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" />
    </Style>

    <Style x:Key="LabelMicro" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="10"/>
    </Style>
    <Style x:Key="LabelSmall" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="LabelMedium" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style x:Key="LabelLarge" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="LabelLarge1" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="21"/>
    </Style>

    <Style x:Key="LabelLarge2" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style x:Key="LabelLarge3" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="27"/>
    </Style>



    <Style x:Key="MontserratBold" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-Bold" />
    </Style>

    <Style x:Key="MontserratSemiBold" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-SemiBold" />
    </Style>
    <Style x:Key="MontserratMedium" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-Medium" />
    </Style>
    <Style x:Key="MontserratRegular" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-Regular" />
    </Style>
    <Style x:Key="MontserratLight" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-Light" />
    </Style>
    <Style x:Key="MontserratExtraLight" TargetType="Label" >
        <Setter Property="FontFamily" Value="Montserrat-ExtraLight" />
    </Style>


